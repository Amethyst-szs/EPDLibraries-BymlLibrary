<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <InvariantGlobalization>true</InvariantGlobalization>
    <PackageReadmeFile>Readme.md</PackageReadmeFile>
    <PackageLicenseFile>License.md</PackageLicenseFile>
    <PackageVersion>1.0.2</PackageVersion>
    <PackageProjectUrl>https://github.com/Amethyst-szs/EPDLibraries-BymlLibrary</PackageProjectUrl>
  </PropertyGroup>

  <ItemGroup>
    <None Include="../../Icon.png" Link="Assets\Icon.png">  
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
  	<None Include="../../Readme.md" Link="Assets\Readme.md">
  	  <Pack>True</Pack>
  	  <PackagePath>\</PackagePath>
  	</None>
  </ItemGroup>

  <ItemGroup>
  	<None Include="../../License.md" Link="Assets\License.md">
  	  <Pack>True</Pack>
  	  <PackagePath>\</PackagePath>
  	</None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="LiteYaml" Version="0.1.1" />
    <PackageReference Include="Revrs" Version="1.0.6" />
  </ItemGroup>

</Project>
